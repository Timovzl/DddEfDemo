<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<AssemblyName>Architect.DddEfDemo.DddEfDemo.Infrastructure.Databases</AssemblyName>
		<RootNamespace>Architect.DddEfDemo.DddEfDemo.Infrastructure.Databases</RootNamespace>
	</PropertyGroup>

	<PropertyGroup>
		<!-- CA1825: Avoid zero-length array allocations - generated by EF migrations -->
		<NoWarn>CA1825</NoWarn>
	</PropertyGroup>
	
	<ItemGroup>
		<InternalsVisibleTo Include="$(AssemblyName).IntegrationTests" />
		<InternalsVisibleTo Include="Architect.DddEfDemo.DddEfDemo.Application.IntegrationTests" />
		<InternalsVisibleTo Include="Architect.DddEfDemo.DddEfDemo.Application.UnitTests" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Architect.Identities.EntityFramework" />
		<PackageReference Include="Microsoft.Data.SqlClient" />
		<PackageReference Include="Microsoft.EntityFrameworkCore.Design">
			<PrivateAssets>all</PrivateAssets>
		</PackageReference>
		<PackageReference Include="Microsoft.EntityFrameworkCore.SqlServer" />
		<PackageReference Include="Microsoft.EntityFrameworkCore.Tools">
			<PrivateAssets>all</PrivateAssets>
			<IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
		</PackageReference>
		<PackageReference Include="Microsoft.Extensions.Caching.Memory" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\Application\Application.csproj" />
		<ProjectReference Include="..\Domain\Domain.csproj" />
	</ItemGroup>

</Project>
